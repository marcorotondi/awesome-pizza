<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1760476765217-1" author="rot">
        <sql>
            CREATE SCHEMA pizza;
        </sql>
    </changeSet>
    <changeSet id="1760475135034-1" author="rot">
        <createTable schemaName="pizza" tableName="ingredient">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ingredient"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1760475135034-2" author="rot">
        <createTable schemaName="pizza" tableName="pizza">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pizza"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL(3,2)"/>
        </createTable>
    </changeSet>
    <changeSet id="1760475135034-3" author="rot">
        <createTable schemaName="pizza" tableName="pizza_ingredients">
            <column name="pizza_entity_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pizza_ingredients"/>
            </column>
            <column name="ingredients_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ingredients_pizza"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1760475135034-5" author="rot">
        <addForeignKeyConstraint baseColumnNames="ingredients_id" baseTableName="pizza_ingredients"
                                 baseTableSchemaName="pizza" constraintName="fk_mening_on_ingredient_entity"
                                 referencedColumnNames="id" referencedTableName="ingredient"
                                 referencedTableSchemaName="pizza"/>
    </changeSet>
    <changeSet id="1760475135034-6" author="rot">
        <addForeignKeyConstraint baseColumnNames="pizza_entity_id" baseTableName="pizza_ingredients"
                                 baseTableSchemaName="pizza" constraintName="fk_mening_on_pizza_entity"
                                 referencedColumnNames="id" referencedTableName="pizza"
                                 referencedTableSchemaName="pizza"/>
    </changeSet>
    <changeSet id="1760475277056-1" author="rot">
        <loadData tableName="pizza" file="db/changelog/data/pizza.csv"/>
        <loadData tableName="ingredient" file="db/changelog/data/ingredients.csv"/>
    </changeSet>
    <changeSet id="1760480117851-1" author="rot">
        <loadData tableName="pizza_ingredients" file="db/changelog/data/pizza_ingredients.csv"/>
    </changeSet>
</databaseChangeLog>